<div class="container">
  <div class="jumbotron">
    <h1 class="text-center"><span class="fas fa-hospital-alt"></span> Welcome!</h1>
    <hr>
    <h3 class="text-center">What would you like to do today?</h3>
    <br>
    <div class='text-center'>
      <a href="/">
        <button class="btn btn-primary btn-lg"><i class="fas fa-home"></i> Home Page</button>
      </a>
      <a href="/addpatient">
        <button class="btn btn-info btn-lg"><i class="fas fa-user-plus"></i> Add a new Patient</button>
      </a>
      <a href="">
        <button class="btn btn-warning btn-lg"><i class="fas fa-user-lock"></i> Future Admin stuff?</button>
      </a>
      <a href="/logout">
        <button class="btn btn-danger btn-lg"><i class="fas fa-sign-out-alt"></i> Logout</button>
      </a>
    </div>
  </div>
  <div class="jumbotron">
    <div class="card-deck">
      {{!-- Card 1 --}}
      <div class="card">
        <div class="card-header">Search By:</div>
        <div class="card-body">
          <form id="searchForm">
            {{!-- Search Method --}}
            <div class="divSearchMethod">
              <select id="searchMethod" name="searchMethod" class="form-control selectpicker show-tick" title="Choose a search" data-style="btn-info">
                <option value="1">Search Patients by ID</option>
                <option value="2">Search Patients by Name</option>
                <option value="3">Search Patients by Doctor ID</option>
              </select>
            </div>
            <br>
            {{!-- Search by Patient ID --}}
            <div class="divSearchPatientID">
              <select id="searchPatientID" name="searchPatientID" class="form-control selectpicker show-tick" title="Choose a Patient ID" data-style="btn-info" data-live-search="true">
                {{#each patients}}
                  <option value={{this.dataValues.id}}>{{this.dataValues.id}}</option>
                {{/each}}
              </select>
            </div>
            {{!-- Search by Patient Name --}}
            <div class="divSearchPatientName">
              <select id="searchPatientName" name="searchPatientName" class="form-control selectpicker show-tick" title="Choose a Patient Name" data-style="btn-info" data-live-search="true">
                {{#each patients}}
                  <option value={{this.dataValues.id}}>{{this.dataValues.name}}</option>
                {{/each}}
              </select>
            </div>
            {{!-- Search Patients by Doctor ID --}}
            <div class="divSearchPatientDoctorID">
              <select id="searchPatientDoctorID" name="searchPatientDoctorID" class="form-control selectpicker show-tick" title="Choose a Doctor ID" data-style="btn-info" data-live-search="true">
                {{#each doctors}}
                  <option value={{this.dataValues.id}}>{{this.dataValues.id}} - {{this.dataValues.name}}
                  </option>
                {{/each}}
              </select>
            </div>
            <br>
            <div class="divSearchSubmitButton">
              <button id="searchSubmitButton" class="btn btn-primary" type="submit">Search</button>
            </div>
          </form>
        </div>
      </div>
      {{!-- Card 2 --}}
      <div class="card">
        <div class="card-header">Results:</div>
        <div class="card-body">
          {{!-- Search Results --}}
          <div id="divSearchResults">
            <ul>
              {{!-- Search Results by Doc Data --}}
              <div id="docSearchResults">
              </div>
              {{!-- Search Results by Patient Data --}}
              <div id="patientSearchResults">
                <li>Patient ID: <b><span id="patientIdText"></span></b></li>
                <li>Patient Name: <b><span id="patientNameText"></span></b></li>
                <li>Patient Doctor: <b><span id="patientDocText"></span></b></li>
                <li>Patient Medical History:
                  <ul id="patientMedText"></ul>
                </li>
                <br>
                <button id="editMedicalButton" class="btn btn-primary" type="submit">Edit Medical History</button>
              </div>
            </ul>
            <div id="editMedicalDiv">
              <form>
                <input id="addMedicalHistoryInput" placeholder="Medical Data" class="form-control" type="text" oninvalid="this.setCustomValidity('Enter Medical History')" oninput="this.setCustomValidity('')" required>
                <br>
                <button id="addMedicalHistoryButton" class="btn btn-primary" type="submit">Add Medical History to Patient</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>
  <div class="footer">
    <footer>
      <a href="https://github.com/SandeshCharka/hospital-records">Github Repo</a>
    </footer>
  </div>
</div>

<script src="/js/search.js"></script>